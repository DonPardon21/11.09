<%- include("../partials/head") %>
<body>
  <%- include("../partials/header") %>

  <div class="content">
    <div class="contact-form-container">
      <h2>Skontaktuj się z nami</h2>
      <form action="/contact/submit" method="post" class="contact-form">
        <div class="form-group">
          <label for="name">Imię i Nazwisko</label>
          <input type="text" id="name" name="name" required placeholder="Twoje imię i nazwisko" />
        </div>

        <div class="form-group">
          <label for="email">Adres e-mail</label>
          <input type="email" id="email" name="email" required placeholder="Twój adres e-mail" />
        </div>

        <div class="form-group">
          <label for="message">Wiadomość</label>
          <textarea id="message" name="message" required placeholder="Twoja wiadomość"></textarea>
        </div>

        <button type="submit" class="submit-button">Wyślij wiadomość</button>
      </form>
    </div>
  </div>

  <%- include("../partials/footer") %>
</body>
